# AppGenie Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
PORT=3333
MCP_SERVER_PORT=3334
NODE_ENV=development
LOG_LEVEL=info

# Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-opus

# Firebase Configuration (for PWA deployment)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id

# Expo Configuration (for mobile deployment)
EXPO_USERNAME=your_expo_username
EXPO_PASSWORD=your_expo_password

# App Configuration
DEFAULT_TEMPLATE=default
DEFAULT_DEVICE=iphone
DEFAULT_DEPLOY_TARGET=pwa
APPGENIE_MODE=web

# Agent Configuration
ENABLE_FEEDBACK_AGENT=true
ENABLE_LAYOUT_OPTIMIZER=true