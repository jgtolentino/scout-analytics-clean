{
  "name": "hawk-studio",
  "version": "1.0.0",
  "description": "Desktop studio for Hawk SDK - Visual automation builder and executor",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.insightpulseai.hawk-studio",
    "productName": "Hawk Studio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "electron": "27.0.0",
    "electron-store": "8.1.0",
    "ws": "8.14.2",
    "express": "4.18.2",
    "cors": "2.8.5",
    "multer": "1.4.5-lts.1",
    "chokidar": "3.5.3",
    "node-pty": "0.10.1"
  },
  "devDependencies": {
    "electron-builder": "24.6.4",
    "concurrently": "8.2.2"
  },
  "author": "InsightPulseAI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/insightpulseai/hawk-studio"
  }
}