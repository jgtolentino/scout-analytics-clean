# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI Configuration (Optional - uses mock if not provided)
NEXT_PUBLIC_SUQI_API_URL=https://api.your-ai-service.com/v1
NEXT_PUBLIC_SUQI_API_KEY=your-ai-api-key

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_KEY=your-analytics-key
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_AI_INSIGHTS=true
NEXT_PUBLIC_ENABLE_STORY_MODE=true
NEXT_PUBLIC_ENABLE_EXPORT=true

# Development
NODE_ENV=production